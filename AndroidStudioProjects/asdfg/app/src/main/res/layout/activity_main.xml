<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/speedProgress_pd"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#9F76FF"
            android:max="400"
            android:progress="100"
            android:progressDrawable="@drawable/progress_circle"
            android:progressTint="#592cc1">
        </ProgressBar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#0FFF"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/speed_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100.0"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/frameLayout"
        app:layout_constraintEnd_toEndOf="@id/frameLayout"
        app:layout_constraintTop_toTopOf="@id/frameLayout"
        app:layout_constraintBottom_toBottomOf="@id/frameLayout">
    </TextView>
    <TextView
        android:id="@id/speedUnit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Km/h"
        android:textSize="24sp"
        android:textStyle="blod"
        app:layout_constraintStart_toEndOf="@id/speed_tv"
        app:layout_constraintBottom_toBottomOf="@id/speed_tv">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
